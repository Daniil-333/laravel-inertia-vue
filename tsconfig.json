{
    "compilerOptions": {
        "target": "es2020",
        "module": "esnext",
        "noImplicitThis": true,
        "strict": true,
        "jsx": "preserve",
        "allowJs": true,
        "isolatedModules": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "allowImportingTsExtensions": true,
        "allowSyntheticDefaultImports": true,
        "importsNotUsedAsValues": "error",
        "baseUrl": ".",
        "paths": {
            "@/*": ["resources/js/*"]
        },
        "types": [
            "vite/client",
            "@vue/runtime-core",
            "vue"
        ],
        "typeRoots": [
            "./node_modules/@types",
            "./resources/js/types"
        ],
        "lib": ["es2020", "dom", "dom.iterable"]
    },
    "include": [
        "resources/js/**/*.ts",
        "resources/js/**/*.d.ts",
        "resources/js/**/*.vue",
        "resources/js/**/*.tsx",
        "resources/js/**/*.js"
    ],
    "exclude": [
        "node_modules", "public"
    ]
}
